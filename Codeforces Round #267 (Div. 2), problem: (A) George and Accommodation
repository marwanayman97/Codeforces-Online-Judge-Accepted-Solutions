#include <iostream>

using namespace std;

int main()
{
    int n,p,q,rooms=0;

    cin>>n;

    if(n>=1 && n<=100){

        for(int i=0;i<n;i++){

            cin>>p>>q;

            if(p>=0 && p<=100 && q>=0 && q<=100 ){

               if(q-p>=2){

                rooms++;

               }

            }
        }




    }

    cout<<rooms<<endl;


    return 0;
}
