#include <bits/stdc++.h>

using namespace std;

int main() {
 
 	string inp,outp;
  
	cin>>inp;
    int len = inp.length();
    bool x = islower(inp[0]);
 	
	 if(x){
	outp = toupper(inp[0]);
	}else{
		outp = inp[0];
	}
 
 	cout<<outp;
 	for(int i=1;i<len;++i){
 		cout<<inp[i];
	 }
	 
 	cout<<endl;
 	return 0;
 }
