#include <iostream>


using namespace std;

int main(){
           
    int n;
    string love = "I love";
    string hate = "I hate";
    
    cin>>n;
    
    if(n>=1 && n<=100){
    	if (n==1){
    		cout<<"I hate it"<<endl;
    		
		}else if(n>1){
			for(int i=1;i<=n;i++){
				if(i%2==1){
					if(i==n){
						cout<<"I hate it"<<endl;
					
					}else{
					
					cout<<"I hate that";
					}
				}else if(i%2==0){
					if(i==n){
						cout<<" I love it"<<endl;
					
					}else{
					
					cout<<" I love that ";
				}
				}
			}
		}
    	
	}
    
    
		   
      
    return 0;
  }
