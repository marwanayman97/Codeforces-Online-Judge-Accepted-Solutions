#include <iostream>


using namespace std;

int main(){
           
         int y;
         
         cin>>y;
         
         if(y>=1000 && y<=9000){
         	while(y > 0)
        {
            y++;
            if(!(y%10==y%100/10 || y%10==y%1000/100 || y%10==y%10000/1000 || y%100/10==y%1000/100 || y%100/10==y%10000/1000 || y%1000/100==y%10000/1000)){
            	
				cout<< y << endl;
				break;
			}
        }
		 
		   }
      
    return 0;
  }
